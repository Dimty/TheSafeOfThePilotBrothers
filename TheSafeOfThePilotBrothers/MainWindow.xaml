<Window x:Class="TheSafeOfThePilotBrothers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheSafeOfThePilotBrothers"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MainGrid" ShowGridLines="False">

        <TextBox Name="NField" HorizontalAlignment="Center" Background="Bisque" VerticalAlignment="Center" Height="100" Width="100" FontSize="65" TextAlignment="Center" KeyDown="TextBox_KeyDown">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="40"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Label Name="Hint" Content="?" HorizontalAlignment="Center" Margin="0,112,0,0" VerticalAlignment="Top" FontSize="30"/>
    </Grid>

</Window>
